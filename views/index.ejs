  <ul class="store">
    <!-- Loop through quotes -->
    <% for(var i=0; i < store.length; i++) {%>
      <li class="item">
        <!-- Output name from the iterated quote object -->
        <div class="text">
          <div class="title">
            <%= store[i].name %> the title is lorem
          </div>
          <div class="flex">
            <div class="showAuthor">
           Written by: <%= store[i].author %>
          </div>
          <div class="showdate">
            <%= store[i].date %>
          </div> <div class="showtime">
            <%= store[i].time %>
          </div>
          </div>
          

          <!-- Output quote from the iterated quote object -->
          <div class="data">
            <%= store[i].quote %>Lorem ipsum dolor sit amet consectetur adipisicing elit. Iste optio blanditiis
              temporibus
              a quas at unde pariatur aperiam animi reiciendis eos accusantium laboriosam excepturi, facere similique,
              eum
              ducimus soluta reprehenderit?
          </div>
          <textarea placeholder="Comment here" id="" cols="10" rows="5"></textarea>
        </div>

        <div class="img">
          <img src="/uploads/1757012954004-me.jpg" width="100%" alt="">
          <%= store[i].image %>
        </div>
      </li>
      <% } %>
  </ul>



  <script src="/main.js"></script>
</body>

</html>